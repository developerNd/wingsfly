<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- For custom alarm sound files in files directory -->
    <files-path name="alarm_sounds" path="sounds/" />
    
    <!-- For cached alarm sounds -->
    <cache-path name="alarm_cache" path="sounds/" />
    
    <!-- For external alarm sounds -->
    <external-files-path name="external_sounds" path="sounds/" />
    
    <!-- ADD THESE NEW PATHS for DocumentPicker support -->
    <!-- External storage access for user-selected files -->
    <external-path name="external_storage" path="." />
    
    <!-- Downloads folder where users often store music -->
    <external-files-path name="downloads" path="Download/" />
    
    <!-- Media directories for audio files -->
    <external-media-path name="external_media" path="." />
    
    <!-- For raw resources -->
    <root-path name="root" path="." />
    
    <!-- For internal storage sounds -->
    <files-path name="internal_sounds" path="." />
</paths>