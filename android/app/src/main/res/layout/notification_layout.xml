<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:orientation="horizontal"
    android:gravity="start|center_vertical"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

    <!-- Quick Notes Text -->
    <TextView
        android:id="@+id/notification_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quick Notes"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="32dp" />

    <!-- Edit Button with Text -->
    <LinearLayout
        android:id="@+id/btn_edit_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackgroundBorderless">
        
        <ImageView
            android:id="@+id/btn_edit"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_pen"
            android:scaleType="fitCenter"
            android:padding="4dp"
            android:contentDescription="Edit notes" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:textSize="10sp"
            android:textColor="#666666"
            android:layout_marginTop="2dp" />
    </LinearLayout>

    <!-- Stop Button with Text -->
    <LinearLayout
        android:id="@+id/btn_stop_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackgroundBorderless">
        
        <ImageView
            android:id="@+id/btn_stop"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/icon_stop"
            android:scaleType="fitCenter"
            android:padding="4dp"
            android:contentDescription="Stop service" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop"
            android:textSize="10sp"
            android:textColor="#666666"
            android:layout_marginTop="2dp" />
    </LinearLayout>

</LinearLayout>