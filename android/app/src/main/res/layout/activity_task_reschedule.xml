<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp">

    <!-- Current Time -->
    <TextView
        android:id="@+id/currentTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="00:00"
        android:textColor="#000000"
        android:textSize="48sp"
        android:textStyle="bold" />

    <!-- Current Date -->
    <TextView
        android:id="@+id/currentDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/currentTime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Monday, 1 January"
        android:textColor="#666666"
        android:textSize="16sp" />

    <!-- Task Title -->
    <TextView
        android:id="@+id/taskTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/currentDate"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:text="Task Title"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Task Description -->
    <TextView
        android:id="@+id/taskDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/taskTitle"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Task Description"
        android:textColor="#666666"
        android:textSize="16sp"
        android:visibility="gone" />

    <!-- Start Time -->
    <TextView
        android:id="@+id/startTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/taskDescription"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Scheduled for 10:00 AM"
        android:textColor="#0059FF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Reschedule Message -->
    <TextView
        android:id="@+id/rescheduleMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/startTime"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="Would you like to reschedule this task?"
        android:textColor="#333333"
        android:textSize="18sp" />

    <!-- Buttons Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:orientation="vertical">

        <!-- Reschedule Button -->
<Button
    android:id="@+id/rescheduleButton"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="#0059FF"
    android:text="Reschedule Task"
    android:textColor="#FFFFFF"
    android:textSize="18sp"
    android:textStyle="bold"
    android:layout_marginBottom="16dp" />

<!-- Cancel Button -->
<Button
    android:id="@+id/cancelButton"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="#F5F5F5"
    android:text="Cancel"
    android:textColor="#666666"
    android:textSize="18sp" />

    </LinearLayout>

</RelativeLayout>